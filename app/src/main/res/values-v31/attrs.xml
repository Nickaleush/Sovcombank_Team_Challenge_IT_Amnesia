<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="PinCodeLayout">
		<attr name="pinLength" format="integer" />
		<attr name="pinTextColor" format="color" />
		<attr name="unfilledPinIcon" format="reference" />
		<attr name="filledPinIcon" format="reference" />
		<attr name="animationDuration" format="integer" />
		<attr name="inputBackground" format="reference" />
		<attr name="hidePin" format="boolean" />
		<attr name="activeBarColor" format="color" />
		<attr name="inactiveBarColor" format="color" />

		<attr name="pinType" format="enum">
			<enum name="digits" value="0" />
			<enum name="capLettersAndDigits" value="1" />
		</attr>
	</declare-styleable>

	<declare-styleable name="PinView">
		<attr name="titleName" format="string" />
		<attr name="titleTextColor" format="color" />
		<attr name="titleTextSize" format="dimension" />
		<attr name="dotProgressColor" format="color" />
		<attr name="dotUnProgressColor" format="color" />
		<attr name="dotRadius" format="dimension" />
		<attr name="numbersTextSize" format="dimension" />
		<attr name="numbersTextColor" format="color" />
		<attr name="deleteButtonColor" format="color" />
		<attr name="clearButtonColor" format="color" />
		<attr name="errorMessageText" format="string" />
		<attr name="errorMessageTextSize" format="dimension" />
		<attr name="errorMessageColor" format="color" />
	</declare-styleable>
	
</resources>